{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "@repo/db#build": {
      "env": ["DATABASE_URL"],
      "outputs": ["dist/**"]
    },
    "@read-frog/extension#build": {
      "inputs": ["$TURBO_DEFAULT$", "!coverage/**"],
      "outputs": [".output/**", ".wxt/**"]
    },
    "@read-frog/website#build": {
      "env": [
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "DATABASE_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**", ".source/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    }
  }
}
